<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Space</title>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@200;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; font-family: 'Outfit', sans-serif; }

        body {
            background: url('https://images.unsplash.com/photo-1519681393784-d120267933ba?q=80&w=2070&auto=format&fit=crop') no-repeat center center/cover;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            padding-top: 80px;
            padding-bottom: 40px;
        }
        
        body::before {
            content: ''; position: absolute; top: 0; left: 0; width: 100%; height: 100%;
            background: rgba(0, 0, 0, 0.3); z-index: -1; position: fixed;
        }

        .app-container {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(30px);
            -webkit-backdrop-filter: blur(30px);
            width: 500px;
            border-radius: 40px;
            padding: 50px;
            box-shadow: 0 25px 50px rgba(0,0,0,0.3);
            border: 1px solid rgba(255, 255, 255, 0.2);
            color: white;
        }

        h2 { 
            color: white; margin-bottom: 30px; font-weight: 300; 
            font-size: 36px; letter-spacing: -1px; text-align: center;
        }

        .date-display {
            font-size: 13px; color: rgba(255, 255, 255, 0.7);
            margin-bottom: 5px; text-transform: uppercase;
            letter-spacing: 3px; font-weight: 600; text-align: center;
        }

        /* --- TASK BAR --- */
        .input-group {
            display: flex; align-items: center;
            background: rgba(255, 255, 255, 0.15);
            border-radius: 50px; padding: 8px;
            border: 1px solid rgba(255, 255, 255, 0.3);
            margin-bottom: 40px; transition: 0.4s;
        }

        .input-group:focus-within {
            background: rgba(255, 255, 255, 0.25);
            transform: scale(1.02);
        }

        input[type="text"] {
            flex-grow: 1; padding: 12px 20px; border: none;
            background: transparent; outline: none;
            font-size: 16px; color: white; font-weight: 300;
        }

        input[type="text"]::placeholder { color: rgba(255, 255, 255, 0.6); }

        .add-btn {
            background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%);
            color: white; border: none; width: 45px; height: 45px;
            border-radius: 50%; cursor: pointer; font-size: 20px;
            display: flex; align-items: center; justify-content: center;
            transition: 0.4s;
        }

        .add-btn:hover { transform: rotate(90deg); }

        .task-list { list-style: none; }

        .task-item {
            display: flex; align-items: center; justify-content: space-between;
            background: rgba(0, 0, 0, 0.2);
            padding: 16px 20px; border-radius: 20px;
            margin-bottom: 12px; transition: all 0.3s ease;
            border: 1px solid rgba(255, 255, 255, 0.05);
        }

        /* SPACE FIX: Increased gap here */
        .task-content { 
            display: flex; align-items: center; 
            gap: 30px; /* <--- INCREASED SPACE */
            flex-grow: 1; 
        }

        .task-text { 
            color: rgba(255, 255, 255, 0.9); font-weight: 300; 
            font-size: 16px; letter-spacing: 0.5px;
        }

        .completed .task-text {
            text-decoration: line-through; color: rgba(255, 255, 255, 0.4);
        }
        
        .delete-btn {
            background: none; border: none;
            color: rgba(255, 100, 100, 0.7); cursor: pointer;
            font-size: 14px; padding: 8px; opacity: 0.5; transition: 0.3s;
        }

        .task-item:hover .delete-btn { opacity: 1; }
        .delete-btn:hover { color: #ff6b6b; transform: scale(1.2); }

        .custom-checkbox {
            width: 22px; height: 22px;
            border: 2px solid rgba(255, 255, 255, 0.4);
            border-radius: 50%;
            display: flex; align-items: center; justify-content: center;
            cursor: pointer; color: white; font-size: 12px; transition: 0.2s;
            flex-shrink: 0;
        }
        
        .custom-checkbox:hover { border-color: white; }
        
        .completed .custom-checkbox { 
            background: rgba(255, 255, 255, 0.8); 
            border-color: rgba(255, 255, 255, 0.8); color: #333;
        }
    </style>
</head>
<body>

    <div class="app-container">
        <div class="date-display" id="date-el"></div>
        <h2>My Focus</h2>

        <div class="input-group">
            <input type="text" id="todoInput" placeholder="Add a new task..." autocomplete="off">
            <button onclick="addTask()" class="add-btn"><i class="fas fa-plus"></i></button>
        </div>

        <ul class="task-list" id="taskList">
            <% todoTasks.forEach(task => { %>
                <li class="task-item <%= task.isCompleted ? 'completed' : '' %>" id="task-<%= task._id %>">
                    
                    <span class="task-content">
                        <div class="custom-checkbox" onclick="toggleTask('<%= task._id %>')">
                            <% if(task.isCompleted) { %> <i class="fas fa-check"></i> <% } %>
                        </div>
                        
                        <span class="task-text"><%= task.text %></span>
                    </span>

                    <button onclick="deleteTask('<%= task._id %>')" class="delete-btn"><i class="fas fa-trash"></i></button>
                </li>
            <% }) %>
        </ul>
    </div>

    <script>
        // Set Date
        const dateOptions = { weekday: 'long', month: 'short', day: 'numeric' };
        document.getElementById('date-el').innerText = new Date().toLocaleDateString('en-US', dateOptions);

        // --- AJAX FUNCTIONS (No Reload Logic) ---

        // 1. ADD TASK
        async function addTask() {
            const input = document.getElementById('todoInput');
            const text = input.value;
            if (!text) return;

            const res = await fetch('/add', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ newtodo: text })
            });

            const task = await res.json();
            
            // Add HTML to list instantly
            const ul = document.getElementById('taskList');
            const li = document.createElement('li');
            li.className = 'task-item';
            li.id = `task-${task._id}`;
            li.innerHTML = `
                <span class="task-content">
                    <div class="custom-checkbox" onclick="toggleTask('${task._id}')"></div>
                    <span class="task-text">${task.text}</span>
                </span>
                <button onclick="deleteTask('${task._id}')" class="delete-btn"><i class="fas fa-trash"></i></button>
            `;
            ul.appendChild(li);
            input.value = ''; // Clear input
        }

        // 2. TOGGLE TASK
        async function toggleTask(id) {
            const li = document.getElementById(`task-${id}`);
            const checkbox = li.querySelector('.custom-checkbox');
            
            // Visual update instantly
            li.classList.toggle('completed');
            if(li.classList.contains('completed')) {
                checkbox.innerHTML = '<i class="fas fa-check"></i>';
            } else {
                checkbox.innerHTML = '';
            }

            // Send to server quietly
            await fetch(`/toggle/${id}`, { method: 'POST' });
        }

        // 3. DELETE TASK
        async function deleteTask(id) {
            const li = document.getElementById(`task-${id}`);
            li.style.opacity = '0'; // Fade out effect
            setTimeout(() => li.remove(), 300); // Remove after fade

            await fetch('/delete', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ id: id })
            });
        }
        
        // Allow "Enter" key to add task
        document.getElementById("todoInput").addEventListener("keypress", function(event) {
            if (event.key === "Enter") {
                addTask();
            }
        });
    </script>

</body>
</html>